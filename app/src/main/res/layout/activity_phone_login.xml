<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="17sp"
        android:layout_marginTop="180sp"
        android:layout_marginEnd="17sp"
        android:drawableStart="@drawable/phone"
        android:hint="Enter Phone Number With Country Code"
        android:padding="8sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="17sp"
        android:layout_marginTop="180sp"
        android:layout_marginEnd="17sp"
        android:layout_marginBottom="20sp"
        android:drawableStart="@drawable/password"
        android:hint="Write verification code here..."
        android:padding="5sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_input"
        android:layout_centerInParent="true"
        android:layout_marginStart="17sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="17sp"
        android:text="Send Verification Code"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_input"
        android:layout_centerInParent="true"
        android:layout_marginStart="17sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="17sp"
        android:text="Verify"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>